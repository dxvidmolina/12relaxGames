    <title>Registro</title>
    
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <div class="logo"> <img src="/images/Logo rxgames.png" alt=""></div>
    <div class="formularios">
        <form action="/registro" method="POST" >
        <div class="leftside">
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" id="nombre">
            <% if(locals.errores && errores.nombre)  { %>
                <p class="errores">
                    <%=errores.nombre%>
                </p>
            <% } %>
            
            <label for="nickname">Nickname:</label>
            <input type="text" name="nickname" id="nickname">

            <label for="email1">Email:</label>
            <input type="email" name="email1" id="email1">

            <label for="email">Repita email:</label>
            <input type="email" name="email" id="email">
        </div>
        <div class="rightside">
            <label for="password1">Contraseña:</label>
            <input type="password" name="password1" id="password1">

            <label for="password">Confirmar :</label>
            <input type="password" name="password" id="password">

            <label for="pais"> País:</label>
            <input type="text" name="pais" id="pais">
        
            <label for="edad"> Edad:</label>
            <input type="text" name="edad" id="edad">
            <input type="text" name="nombre" id="nombre" >

            <label for="nickname">Apellido:</label>
            <input type="text" name="nickname" id="nickname" >

            <label for="email1">Email:</label>
            <input type="email" name="email1" id="email1" >

            <label for="email">Repita email:</label>
            <input type="email" name="email" id="email" >
        </div>
        <div class="rightside">
            <label for="password1">Contraseña:</label>
            <input type="password" name="password1" id="password1" >

            <label for="password">Confirmar :</label>
            <input type="password" name="password" id="password" >

            <label for="pais"> País:</label>
            <select name="pais" id="pais">
                <option value="Argentina">Argentina</option>
                <option value="Uruguay">Uruguay</option>
                <option value="Brasil">Brasil</option>
                <option value="Chile">Chile</option>
                <option value="Colombia">Colombia</option>
                <option value="Bolivia">Bolivia</option>
                <option value="Perú">Perú</option>
                <option value="Paraguay">Paraguay</option>
                <option value="Ecuador">Ecuador</option>
                <option value="Venezuela">Venezuela</option>
                <option value="Guyana">Guyana</option>

            </select>
                
            <label for="edad"> Edad:</label>
            <input type="text" name="edad" id="edad" >
        </div>
    </div>
    <div class="errores">
        <ul>
            
        </ul>
    </div>


    <div id="checkboxes">
        
        <div id="checkbox1">
        <input type="checkbox" name="Confirmar" value="si" id="caja1">
        <label for="newlestter"> Le gustaría recibir noticias o información acerca de relax games?</label>
        
        </div>
        <div id="checkbox2">
        <input type="checkbox" name="Confirmar" value="si" id="caja2">
        <label for="terminos"> Acepta los términos y condiciones de servicio?</label>
        </div>
    </div>

    <button class="botoncontinuar" type="submit" > Continuar </button>
     </form>
    
    </main>
    <%- include("./partials/footer") %>
    <script src="/js/registro.js"></script>
</body>

            
</html>

